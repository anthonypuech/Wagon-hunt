    <%= simple_form_for @product do |f| %>
          <%= f.input :name, placeholder: "Kudoz", label: "Nom du produit?" %>
          <%= f.input :url, placeholder: "http://getkudoz.com", label: "URL du produit?" %>
          <%= f.input :tagline, placeholder: "Tiner for jobs", label: "Which tagline" %>
          <%= f.input :category, collection: ["tech", "education", "design"], prompt: "Which category?" %>
          <%= f.button :submit, "Ajouter un produit", class: "btn btn-primary" %>
    <% end %>
